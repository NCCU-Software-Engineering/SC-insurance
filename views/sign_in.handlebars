<section>
    <div class="container">
        <div class="row">
            <h2 class="text-center">註冊帳號</h2>
            <div class="col-md-8 col-md-offset-2">

                <form class="form-horizontal" action="sign_in" method="post">

                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="contact-name">帳號</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" id="contact-name" name="name" placeholder="帳號">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="contact-password">密碼</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="password" id="contact-password" name="password" placeholder="包含至少一個數字字元(0-9)">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-4">
                            <button type="submit" class="btn btn-success btn-lg">登錄</button>
                        </div>

                        <div class="col-sm-4">
                            <button class="btn btn-success btn-lg" type="reset">忘記密碼</button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</section>