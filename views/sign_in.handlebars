<section>
    <div class="container">
        <div class="row">
            <h2 class="text-center">註冊帳號</h2>
            <div class="col-md-8 col-md-offset-2">

                <form class="form-horizontal" action="/login" method="post">

                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="ID">帳號</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" id="ID" name="ID" placeholder="帳號">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="password">密碼</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="password" id="password" name="password" placeholder="包含至少一個數字字元(0-9)">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-4">
                            <button type="submit" role="button" class="btn btn-success btn-lg">送出</button>
                        </div>
                        <div class="col-sm-4">
                            <a href="" role="button" class="btn btn-success btn-lg">忘記密碼</a>
                        </div>
                    </div>

                </form>

            </div>
        </div>
    </div>
</section>