{{#section 'css'}}
<link rel="stylesheet" href="css/wallet.css"></link>
{{/section}}

<!--教學頁面-->
<section id="guide">
    <div class="container">
        <div class="row">
            <button>開啟mist</button>
            <button onclick="location.href='https://github.com/ethereum/mist/releases'">下載mist</button>
        </div>
    </div>
</section>

<!--繳費頁面-->
<section id="wallet">
    <div class="container">
        <div class="row">
            <h2>保單資訊</h2>
            <dl class="dl-horizontal">
                <dt>保單編號</dt>
                <dd>{{auto}}</dd>

                <dt>保單地址</dt>
                <dd>{{address}}</dd>

                <dt>保單名稱</dt>
                <dd>{{alias}}</dd>

                <dt>保單類型</dt>
                <dd id="isGuarantee">{{isGuarantee}}</dd>

                <dt>保費</dt>
                <dd>{{payment}}以太幣</dd>

                <dt>受益人</dt>
                <dd>{{name}}</dd>

                <div id="guarantee">
                    <dt>身故受益人</dt>
                    <dd>{{deathBeneficiary}}</dd>

                    <dt>身故受益人關係</dt>
                    <dd>{{deathBeneficiaryRelationship}}</dd>
                </div>

                <dt>保單狀態</dt>
                <dd id="state"></dd>

                <dt>保險年期</dt>
                <dd>終身</dd>
            </dl>

            <h2>帳戶資訊</h2>
            <select>
                <option>請選擇帳號</option>
            </select>
            <dl class="dl-horizontal">
                <dt>平台</dt>
                <dd id="platform"></dd>

                <dt>目前選擇帳號</dt>
                <dd id="account"></dd>

                <dt>帳號餘額</dt>
                <dd id="balance"></dd>
            </dl>

            <div id="send">
                <h2>保單資訊</h2>
                <dl class="dl-horizontal">
                    <dt>交易狀態</dt>
                    <dd id="su"></dd>

                    <dt>txHash</dt>
                    <dd id="hash"></dd>

                    <dt>確認區塊數</dt>
                    <dd id="confirmationNumber"></dd>
                </dl>
            </div>

            <button id="buy">付款</button>
        </div>
    </div>
</section>

{{#section 'script'}}
<script src="js/dist/web3.min.js"></script>
<script src="js/data.js"></script>
<script src="js/wallet.js"></script> {{/section}}