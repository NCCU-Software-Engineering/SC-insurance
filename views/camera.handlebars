<section>
    <script src="js/webcam.js"></script>
    <div class="row">
        <div class="col-sm-4"></div>
        <div id="my_camera" style="width:380px; height:320px;" class="col-sm-4"></div>
    </div>
    <div class="row">
        <div class="col-sm-4"></div>
        <div id="my_result" class="col-sm-4"></div>
    </div>
    <script language="JavaScript">
        Webcam.attach('#my_camera');
        // Attach camera here
        function take_snapshot() {
            Webcam.snap(function (data_uri) {
                document.getElementById('my_result').innerHTML = '<img src="' + data_uri + '"/>';
                $.get('/takepic', (data) => {
                    if (confirm('確認這張照片？')) {
                        $.get('/');
                    } else {
                        $.get('/camera');
                    }
                });
            });
        }
    </script>
    <div class="row">
        <div class="col-sm-4"></div>
        <divclass="col-sm-4"><a href="javascript:void(take_snapshot())">Take Snapshot</a></div>
    </div>
    </body>
</section>