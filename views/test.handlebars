{{#section 'css'}}
<link rel="stylesheet" href="css/test.css">
<link rel="stylesheet" href="css/MyDate.css"> {{/section}}

<section id="main">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>智能合約模擬</h1>
                <hr>
                <input type="checkbox" id="email">電子郵件</input>
                <input type="checkbox" id="letter">簡訊</input>
                <ul class="list-unstyled" id="radio_group">
                    {{{radio}}}
                </ul>
                <hr>
            </div>
        </div>
    </div>
</section>

<section id="event_button">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h3 class="jcountTimer">
                    <span class="year"><div></div><small>year</small></span>
                    <span class="month"><div></div><small>month</small></span>
                    <span class="day"><div></div><small>day</small></span>
                </h3>
            </div>
            <div class="col-md-6">
                <div class="btn-group.btn-group-justified" role="group">
                    <button class="btn btn-success btn-lg" id="next_day">下一天</button>
                    <button class="btn btn-success btn-lg" id="next_month">下一月</button>
                    <button class="btn btn-success btn-lg" id="next_year">下一年</button>
                </div>
                <div class="btn-group.btn-group-justified" role="group">
                    <br>
                    <button class="btn btn-success btn-lg" id="update">更新</button>
                    <button class="btn btn-success btn-lg" id="dead">被保人往生</button>
                    <button class="btn btn-success btn-lg" id="confirm">確認合約</button>
                    <button class="btn btn-success btn-lg" id="revoke">撤銷合約</button>
                </div>
                <div class="btn-group.btn-group-justified" role="group" id="face">
                    <br>
                    <button class="btn btn-success btn-lg" id="success">人臉辨識成功</button>
                    <button class="btn btn-success btn-lg" id="failure">人臉辨識失敗</button>
                </div>
            </div>
            <div class="col-md-12">
                <hr>
            </div>
        </div>
    </div>
</section>

<section id="out">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="panel panel-default" id="state">
                    <div class="panel-heading" id="state_heading">合約狀態</div>
                    <div class="panel-body" id="state_body">請先選擇合約</div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="panel panel-default" id="event">
                    <div class="panel-heading" id="event_heading">事件監聽</div>
                    <div class="panel-body" id="event_body">請先選擇合約</div>
                </div>
            </div>
            <!--
            <div class="col-md-6">
                <div class="panel panel-success">
                    <div class="panel-heading">被保人事件</div>
                    <div class="panel-body" id="a"></div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="panel panel-warning">
                    <div class="panel-heading">保險公司事件</div>
                    <div class="panel-body" id="b"></div>
                </div>
            </div>
            -->
        </div>
    </div>
</section>

{{#section 'script'}}
<script src="js/web3.min.js"></script>
<script src="js/data.js"></script>
<script src="js/MyDate.js"></script>
<script src="js/test.js"></script>
{{/section}}